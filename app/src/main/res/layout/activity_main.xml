<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layoutSensor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/lamp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Smart Lamp"
            android:textColor="#0835C9"
            android:layout_below="@+id/lamp"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvMaxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvCurrentLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMaxValue"
            android:layout_centerHorizontal="true"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCurrentLight">
            <Button
                android:id="@+id/btnOn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Turn On All"
                android:textSize="10dp"
                android:layout_below="@+id/tvCurrentLight"
                />
            <Button
                android:id="@+id/btnOff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Turn Off All"
                android:textSize="10dp"
                android:layout_below="@+id/btnOn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear">
            <Button
                android:id="@+id/btnOnLivingRoom"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Turn On Living Room"
                android:textSize="10dp"
                android:layout_below="@+id/tvCurrentLight"
                />
            <Button
                android:id="@+id/btnOnPark"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Turn On Park"
                android:textSize="10dp"
                android:layout_below="@+id/btnOn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2">
            <Button
                android:id="@+id/btnOnDiningRoom"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Turn On Dining Room"
                android:textSize="10dp"
                android:layout_below="@+id/tvCurrentLight"
                />
            <Button
                android:id="@+id/btnOnKitchen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Turn On Kitchen"
                android:textSize="10dp"
                android:layout_below="@+id/btnOn" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear3"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="15sp" />

    </RelativeLayout>


</RelativeLayout>
